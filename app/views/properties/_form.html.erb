<%= form_with(model: property, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>


  <%= form.fields_for :the_nearest_stations do |the_nearest_station| %>
    <h2>最寄駅<%= the_nearest_station.index + 1 %></h2>
    <div class="field">
      <%= the_nearest_station.label :line_name ,"路線名" %>
      <%= the_nearest_station.text_field :line_name %>
    </div>
    <div class="field">
      <%= the_nearest_station.label :station_name ,"駅名"%>
      <%= the_nearest_station.text_field :station_name %>
    </div>
    <div class="field">
      <%= the_nearest_station.label :minuites_on_foot ,"徒歩数"%>
      <%= the_nearest_station.text_field :minuites_on_foot %>
    </div>
    <div class="delete_station"></div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
